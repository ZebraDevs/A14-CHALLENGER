<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_TYPED_FGS"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:onClick="onClickbtn_TYPED_FGS"
                android:text="TYPED\nFGS" />

            <Button
                android:id="@+id/btn_CREDENTIAL_MANAGER_STORE_PWD"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:onClick="onClickbtn_CREDENTIAL_MANAGER_STORE_PWD"
                android:text="CREDENTIAL\nMANAGER-Save" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_CREDENTIAL_MANAGER_RETRIEVE_PWD"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:onClick="onClickbtn_CREDENTIAL_MANAGER_RETRIEVE_PWD"
                android:text="CREDENTIAL\nMANAGER-Retrieve" />

            <Button
                android:id="@+id/btn_CREDENTIAL_MANAGER_GOOGLEFLOW"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:onClick="onClickbtn_CREDENTIAL_MANAGER_GOOGLEFLOW"
                android:text="Google Flow\n" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_TAKESCREENSHOT"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:onClick="onClickbtn_TAKESCREENSHOT"
                android:text="TAKE\nSCREENSHOT" />


            <Button
                android:id="@+id/btn_PENDINGINTENTS"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:onClick="onClickbtn_PENDINGINTENTS"
                android:text="PENDING\nINTENTS" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>